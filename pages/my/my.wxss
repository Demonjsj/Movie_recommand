/* pages/my/my.wxss */

page{
  background: white;
}

.page_my {
  background: white;
}

.page_top {
  width: 750rpx;
  height: 400rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.my_info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.my_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 250rpx;
  margin-top: 40rpx;
}

.my_name {
  font-size: 40rpx;
  margin-top: 20rpx;
  color: #fff;
}

.my_address {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: #fff;
}

.img_bg {
  position: fixed;
  right: 0;
  top: 0;
  margin: 20rpx 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 10rpx;
  border: 4rpx solid #fff;
  border-radius: 50rpx;
}

.page_bottom {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
}

.function_item {
  width: 248rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 0.5rpx solid #eee;
  border-right: 0.5rpx solid #eee;
}

.img_item {
  width: 80rpx;
  height: 80rpx;
}

.txt_item {
  margin-top: 20rpx;
  font-size: 30rpx;
}
