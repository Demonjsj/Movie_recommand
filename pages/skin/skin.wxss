/* pages/skin/skin.wxss */

.page_bg {
}

.bg_item {
  position: relative;
  width: 710rpx;
  height: 360rpx;
  margin: 20rpx auto;
}

.skin-item-active {
  border: 6rpx solid #47a86c;
  border-radius: 25rpx;
  box-shadow: 0 20rpx 20rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.skin-item-active::before {
  content: '';
  display: block;
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  z-index: 4;
  width: 160rpx;
  height: 160rpx;
  transform: rotate(45deg);
  background-color: #47a86c;
}

.skin-item-active::after {
  content: '在用';
  display: block;
  position: absolute;
  top: 5px;
  right: 3px;
  z-index: 4;
  text-align: center;
  transform: rotate(45deg);
  color: #fff;
  font-size: 28rpx;
}

.bg_img {
  width: 710rpx;
  height: 360rpx;
  border-radius: 20rpx;
}

.bg_name {
  position: absolute;
  width: 710rpx;
  height: 70rpx;
  bottom: 0;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 35rpx;
}

.bg_txt {
  margin-left: 40rpx;
  line-height: 70rpx;
}
